{
  "compilerOptions": {
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "rootDir": ".",
    "target": "ES2022",
    "module": "ESnext",
    "isolatedModules": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": false,
    "outDir": "dist",
       "strictNullChecks": true,
    "sourceMap": true,
    "declaration": true,
    "composite": true,
    "declarationMap": true,
    "noImplicitAny": false,
    "types": ["vite/client", "vite-plugin-svgr/client"],
    "lib": ["esnext", "dom", "dom.iterable"],
    "baseUrl": "./",
    "paths": {
      "@notes/components": ["app/components/index.ts"],
      "@notes/utils": ["app/utils/index.ts"],
      "@notes/types": ["app/types/index.ts"],
      "@notes/hooks": ["app/hooks/index.ts"],
      "@notes/context": ["app/context/index.ts"],
      "@notes/rq": ["app/rq/index.ts"],
      "@notes/layout": ["app/Layout/index.ts"],
      "@notes/theme": ["app/Theme"],
      "@notes/database": ["app/database/index.ts"],
      "@notes/views": ["app/views/index.ts"]
    }
  },
  "include": ["app/**/*"],
  "exclude": ["./node_modules/**/*"]
}
