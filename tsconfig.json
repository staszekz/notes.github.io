{
  "target": "esnext",
  "module": "commonjs",
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react",
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": false,
    "module": "NodeNext",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "composite": true,
    "declarationMap": true,
    "noImplicitAny": false,
    "lib": ["es2022", "dom", "dom.iterable"],
    "baseUrl": "./",
    "paths": {
      "@notes/components": ["src/components/index.ts"],
      "@notes/utils": ["src/utils/index.ts"],
      "@notes/types": ["src/types/index.ts"],
      "@notes/hooks": ["src/hooks/index.ts"],
      "@notes/context": ["src/context/index.ts"],
      "@notes/rq": ["src/queries"],
      "@notes/redux": ["src/store/index.ts"],
      "@notes/layout": ["src/Layout/index.ts"],
      "@notes/theme": ["src/Theme"]
    }
  }
}
